{% extends 'base.html.twig' %}

{% block title %}Inscription - Allo Ambulance{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-white text-center">
                <h4 class="mb-0">
                    <i class="fas fa-user-plus text-primary"></i><br>
                    Créer un compte
                </h4>
            </div>
            <div class="card-body">
                {{ form_start(registrationForm) }}
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(registrationForm.nom) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(registrationForm.prenom) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_row(registrationForm.email) }}
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            {{ form_row(registrationForm.telephone) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(registrationForm.adresse) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_row(registrationForm.plainPassword) }}
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary btn-lg w-100">
                            <i class="fas fa-user-plus"></i> Créer mon compte
                        </button>
                    </div>
                {{ form_end(registrationForm) }}

                <hr class="my-4">

                <div class="text-center">
                    <p class="mb-0">Vous avez déjà un compte?</p>
                    <a href="{{ path('app_login') }}" class="btn btn-outline-primary mt-2">
                        Se connecter
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
